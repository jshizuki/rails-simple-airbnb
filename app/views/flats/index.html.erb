<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-6">
        <div class="card-product mt-2">
          <% default_image = "https://images.unsplash.com/photo-1598228723793-52759bba239c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxleHBsb3JlLWZlZWR8MTR8fHxlbnwwfHx8fA%3D%3D&auto=format&fit=crop&w=500&q=60" %>
          <%= image_tag(flat.image_url.presence || default_image, alt: "flat") %>
          <div class="card-product-infos">
            <h2><%= flat.name %></h2>
            <p><%= flat.address %></p>
            <div class="d-flex justify-content-start">
              <p><i class="fa-solid fa-user-group"></i></p>
              <p><%= flat.number_of_guests %></p>
              <p><i class="fa-solid fa-euro-sign ms-2"></i></p>
              <p><%= flat.price_per_night %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
